{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@actions/*": ["src/actions/*"],
      "@assets/*": ["src/assets/*"],
      "@commons/*": ["src/commons/*"],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"]
    },
    "outDir": "lib",
    "module": "esnext",
    "target": "esnext",
    "lib": ["es6", "esnext", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    //"noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "composite": false,
    "emitDeclarationOnly": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true
  },
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "tests/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "tests",
    "configs",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "sample"
  ]
}
