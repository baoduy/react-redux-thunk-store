{
  "name": "react-redux-thunk-store",
  "version": "1.0.0",
  "description": "The component that help to simplify the way to create the redux store automatically.",
  "main": "lib/index.js",
  "scripts": {
    "all": "npm run build && npm run test:ci",
    "build": "npm run clean && npm run build-lib && npm run test-bundle",
    "build-lib": "babel src --out-dir lib --ignore tests",
    "clean": "rimraf {lib,dist,tmp}/*",
    "git:jest": "git submodule update --init --remote configs/jest",
    "test-bundle": "bundlesize",
    "test": "npm-run-all git:jest && jest --watch --coverage --config=configs/jest/jest.json",
    "test-ci": "npm-run-all git:jest && jest --ci --coverage --config=configs/jest/jest.json && codecov",
    "update": "ncu -u -a",
    "ci-publish": "ci-publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/baoduy/react-redux-thunk-store.git"
  },
  "keywords": [
    "react",
    "redux",
    "thunk",
    "store"
  ],
  "author": "Duy Hoang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/baoduy/react-redux-thunk-store/issues"
  },
  "homepage": "https://github.com/baoduy/react-redux-thunk-store#readme",
  "dependencies": {
    "@babel/runtime": "^7.4.3",
    "react": "^16.8.6",
    "react-redux": "^7.0.2",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-json-strings": "latest",
    "@babel/plugin-syntax-dynamic-import": "latest",
    "@babel/plugin-syntax-import-meta": "latest",
    "@babel/plugin-transform-async-to-generator": "^7.4.0",
    "@babel/plugin-transform-modules-commonjs": "^7.4.3",
    "@babel/plugin-transform-runtime": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.7.1",
    "babel-plugin-module-resolver": "3.2.0",
    "bundlesize": "^0.17.1",
    "ci-publish": "^1.3.1",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.7.1",
    "jsdom-global": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prop-types": "^15.7.2",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "redux-devtools-extension": "^2.13.8",
    "redux-immutable-state-invariant": "^2.1.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/tests/__coverage__/",
    "collectCoverage": true
  },
  "bundlesize": [
    {
      "path": "./lib/*.js",
      "compression": "gzip",
      "maxSize": "1 kB"
    }
  ]
}
